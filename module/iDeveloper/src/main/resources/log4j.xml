<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true">

    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="false" />
        <param name="maxFileSize" value="10MB" />
        <!--<param name="maxBackupIndex" value="5" />-->
        <!-- For Tomcat -->
        <param name="file" value="/Users/hengqiangcao/IdeaProjects/five/cFive/module/iDeveloper/logs/myapp.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="**log4j xml**%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <!-- debug Spring MVC url mapping (Spring MVC?)-->
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter">
        <level value="DEBUG"/>
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="file" />
    </root>

</log4j:configuration>
