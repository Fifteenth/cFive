<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.mapper.DeveloperMapper">


    <resultMap id="developer" type="com.example.bean.Developer">
        <id property="id" column="ID"/>
        <result property="title1" column="TITLE_1"/>
        <result property="title2" column="TITLE_2"/>
        <result property="title3" column="TITLE_3"/>
        <result property="createTime" column="CREATE_TIME"/>
    </resultMap>

    <select id="selectIDeveloper" resultMap="developer">
        select * from I_Developer
        where 1=1
        <if test="createTime != null">
            AND CREATE_TIME &lt;= #{createTime}
        </if>
        <if test="title1 != null">
            AND TITLE_1 = #{title1}
        </if>
        <if test="title2 != null">
            AND TITLE_2 = #{title2}
        </if>
        <if test="title3 != null">
            AND TITLE_3 = #{title3}
        </if>
        <if test="name != null">
            AND NAME = #{name}
        </if>
    </select>


    <select id="selectIDeveloperById" resultMap="developer">
        select * from I_Developer
        where 1=1
        <if test="id != null and id != ''">
            AND ID = #{id}
        </if>
    </select>

    <update id="updateIDeveloper">
        UPDATE I_Developer
        set NAME = #{name},
            TITLE_1 = #{title1},
            TITLE_2 = #{title2},
            TITLE_3 = #{title3},
            LINK = #{link},
            DESCRIPTION = #{description}
        WHERE ID = #{id}
    </update>


</mapper>